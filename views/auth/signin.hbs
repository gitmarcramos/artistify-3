<h1>Signin gros</h1>

<form method="post" action="/auth/signin" class="form">
    {{> flashMessage }}

    <label for="email">email</label>
    <input class="input" type="email" id="email" name="email" placeholder="test@email.com">
    <label for="password">password</label>
    <input class="input" type="password" id="password" name="password" value="1234">
    <button class="btn">signin</button>
</form>
<p>
    Don't have an account yet ? <a href="/auth/signup">signup</a>
</p>